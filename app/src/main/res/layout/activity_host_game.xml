<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="hackcmu.lasertag.HostGameActivity">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/host_game_name"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Game Name"   />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Host Game"
        android:textColor="@color/custom_style_pale"
        android:background="@color/custom_style_red"
        android:textSize="20sp"
        android:id="@+id/host_game_btn"
        android:onClick="buttonClick"/>

    <LinearLayout
        android:id="@+id/score_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <EditText
            android:textColor="#990000"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:id="@+id/red_team_players" />
        <EditText
            android:textColor="#5677fc"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            android:id="@+id/blue_team_players"/>
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="START GAME"
        android:onClick="stopMorePlayers"
        />

</LinearLayout>
